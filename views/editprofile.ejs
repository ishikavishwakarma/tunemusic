                          <div class="input flex  items-center">&nbsp; Upload Image</div>
                        </div>
                      <input id="imginp" name="image" hidden type="file">
                        
                        <button type="submit" class="button-submit">Edit Profile</button>
                      
                      
                       
                      </form>
                      
    

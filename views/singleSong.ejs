<script>
    const playButton = document.getElementById('playButton');
const audioPlayer = document.querySelector('audio');

playButton.addEventListener('click', () => {
  if (audioPlayer.paused) {
    audioPlayer.play();
  } else {
    audioPlayer.pause();
  }
});

function updateStatus(songId) {
    // Send a POST request to update the status
    fetch(`/approve-song/${songId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ status: 'approve' }), // Send the new status in the request body
    })
    .then(response => {
      if (response.ok) {
        // If the status update is successful, update the UI accordingly
        // For example, you can hide the anchor tag or change its text
        // or any other action you want to take on the client side
        window.location.href = '/adminsongs';
      } else {
        console.error('Failed to update status');
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });
  }
function updaterejectstatus(songId) {
    // Send a POST request to update the status
    fetch(`/reject-song/${songId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ status: 'reject' }), // Send the new status in the request body
    })
    .then(response => {
      if (response.ok) {
        // If the status update is successful, update the UI accordingly
        // For example, you can hide the anchor tag or change its text
        // or any other action you want to take on the client side
        window.location.href = '/adminsongs';
      } else {
        console.error('Failed to update status');
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });
  }
</script>
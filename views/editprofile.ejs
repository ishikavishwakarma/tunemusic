                        <div class="flex-column">
                          <label>Name</label>
                        </div>
                        <div class="inputForm">
                            <i class="ri-message-3-line text-xl"></i>
                          <input value="<%=loggedInUser.name%>" name="name" placeholder="Enter your Name" class="input " style="outline: none;" type="text" />

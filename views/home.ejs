  <div class="p-4 sm:ml-64">
    <div class="div p-4 mt-16">
      <h1 class="text-zinc-800 text-2xl font-[600] pb-5">Dashboard</h1>
      <div class="border-gray-200 rounded-lg">
        <div class="grid grid-cols-3 gap-4 mb-4">
          <div
            class="flex card w-full items-center justify-between px-10 text-blue-600 bg-[#fff] border-l-4 border-blue-500 rounded-lg text-center hover:text-[#fff] h-32 dark:bg-gray-700"
          >
            <div class="para flex flex-col items-start">
              <h2 class="text-xl font-[600]">Total Users</h2>
              <p class="text-zinc-600 font-semibold"><%= users.length%></p>
            </div>
            <i class="ri-user-star-line text-5xl text-zinc-700"></i>
          </div>
          <div
            class="flex card2 items-center justify-between px-10 text-[#1CC88A] bg-[#fff] border-l-4 border-[#1CC88A] rounded-lg text-center hover:text-[#fff] h-32 dark:dark:bg-zinc-700"
          >
            <div class="para flex flex-col items-start">
              <h2 class="text-xl font-[600]">Total Songs</h2>
              <p class="text-zinc-700 font-semibold"><%= songs.length%></p>
            </div>

            <i class="text-5xl text-zinc-700 ri-file-music-line"></i>
          </div>
          <div
            class="flex card3 items-center justify-between px-10 text-[#F6C23E] bg-[#fff] border-l-4 border-[#F6C23E] rounded-lg text-center hover:text-[#fff] h-32 dark:dark:bg-zinc-700"
          >
            <div class="para flex flex-col items-start">
              <h2 class="text-xl font-[600]">Total Requests</h2>
              <p class="text-zinc-700 font-semibold"><%= requests.length%></p>
            </div>

            <i class="text-5xl text-zinc-700 ri-git-pull-request-line"></i>
          </div>
        </div>
        <div
          class="flex items-center justify-center h-28 mb-4 rounded bg-gray-50"
        >
          <h1 class="text-3xl font-bold">Welcome Back to TuneMusic</h1>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div
            class="flex h-full items-center justify-center rounded bg-gray-50 w-full"
          >
            <div
              class="w-full p-4 bg-white text-black rounded-lg shadow sm:p-8 dark:bg-gray-200 dark:border-gray-700"
            >
              <div class="flex items-center justify-between mb-4">
                <h5 class="text-xl font-bold leading-none text-gray-900">
                  Users
                </h5>
                <a
                  href="#"
                  class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-500"
                >
                  View all
                </a>
              </div>
              <div class="flow-root">
                <ul
                  role="list"
                  class="divide-y divide-gray-200 dark:divide-gray-700"
                >
                  <% user.forEach(function(users){ %>
                  <li class="py-3 sm:py-4">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <img class="w-8 h-8 rounded-full" src="" alt="" />
                      </div>
                      <div class="flex-1 min-w-0 ms-4">
                        <p class="text-sm font-medium text-gray-900 truncate">
                          <%=users.name%>
                        </p>
                        <p
                          class="text-sm text-gray-500 truncate dark:text-gray-400"
                        >
                          <%=users.email%>
                        </p>
                      </div>
                      <div
                        class="inline-flex items-center text-base font-semibold text-gray-900"
                      >
                        Total songs : <%=users.songs.length%>
                      </div>
                    </div>
                  </li>
                  <%})%>
                </ul>
              </div>
            </div>
          </div>
          <div
            class="flex items-center justify-center rounded bg-gray-50 h-full w-full"
          >
            <div
              class="w-full p-4 bg-white text-black rounded-lg shadow sm:p-8 dark:bg-gray-200 dark:border-gray-700"
            >
              <div class="flex items-center justify-between mb-4">
                <h5 class="text-xl font-bold leading-none text-gray-900">
                  Latest Request
                </h5>
                <a
                  href="/requestsongs"
                  class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-500"
                >
                  View all
                </a>
              </div>
              <div class="flow-root">
                <ul
                  role="list"
                  class="divide-y divide-gray-200 dark:divide-gray-700"
                >
                  <% request.forEach(function(users){ %>
                  <li class="py-3 sm:py-4">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <img class="w-8 h-8 rounded-full" src="" alt="" />
                      </div>
                      <div class="flex-1 min-w-0 ms-4">
                        <p class="text-sm font-medium text-gray-900 truncate">
                          <%=users.name%>
                        </p>
                        <p
                          class="text-sm text-gray-500 truncate dark:text-gray-400"
                        >
                          <%=users.email%>
                        </p>
                      </div>
                      <div
                        class="inline-flex items-center text-base font-semibold text-gray-900"
                      >
                        Total songs : <%=users.songs.length%>
                      </div>
                    </div>
                  </li>
                  <%})%>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

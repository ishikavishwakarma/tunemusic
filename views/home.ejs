    aria-label="Sidebar"
  >
    <div class="h-full px-3 pb-4 overflow-y-auto bg-white dark:bg-blue-500">
      <ul class="space-y-2 font-medium">
        <li>
          <a
            href="/home"
            class="flex items-center p-2 text-white rounded-lg dark:text-white hover:bg-blue-600 dark:hover:bg-blue-600 group"
          >
            <i class="text-xl ri-home-4-line"></i>
            <span class="ms-3">Home</span>
          </a>
        </li>
        <li>
          <a
            href="/adminsongs"
            class="flex items-center p-2 text-white rounded-lg dark:text-white hover:bg-blue-600 dark:hover:bg-blue-600 group"

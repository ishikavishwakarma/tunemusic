<% include ./partials/header.ejs %>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .login-page-left {
        width: 50%;
        height: 100vh;

    }

    .login-page-right {
        width: 50%;
        height: 100%;
    }

    .login-bg-img {
        width: 50%;
    }

    .back-button {
        background-color: #0772ed;
        color: white;
        padding: 8px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        position: absolute;
        top: 10px;
        left: 10px;
    }
    nav .right ul li a {
        transition: color 0.5s ease, transform 0.5s ease;
    }

    nav .right ul li a:hover {
        color: #0772ed;
        transform: scale(1.1);
        text-decoration: none;
    }
    @media screen and (max-width: 762px) {
        .login-page-left {
            width: 100%;
            background-image: url('/images/hotel2/hotel2img2.jpeg');
            background-size: cover;
            background-position: center;
            color: #0772ed;
        }

        .login-page-left h2 {
            color: #0772ed;
            text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);
        }

        .login-page-left label {
            color: #fff;
        }

        .login-page-right {
            width: 0%;
            display: none;
        }

        .login-bg-img {
            width: 0;
        }

    }

    @media screen and (max-width: 400px) {
        .back-button {
            font-size: 12px;
            padding: 5px 8px;
        }
    }



    body::-webkit-scrollbar {
        width: 0;
    }
</style>
<div class=" login-page flex w-full h-screen ">
    <div class="login-page-left bg-white p-8 rounded shadow-md flex flex-col items-center justify-center ">
        <h2 class="text-2xl font-bold mb-8 text-[#000] w-full text-center">Login To Your Account</h2>
        <form class="w-full" action="/login" method="POST">
            <% if (error && error.length> 0) { %>
                <p class="flash-error"
                    style="color: rgb(249, 18, 18); font-weight: 800; text-transform: capitalize; margin: 7px 0;">
                    <%= error %>
                </p>
                <% } %>
                    <div class="mb-5">
                        <label for="email" class="block mb-2 text-sm text-gray-600">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email address"
                            class=" text-black w-full px-3 py-2 placeholder-gray-300 border border-gray-500 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-300"
                            required>
                    </div>
                    <div class="mb-5">
                        <label for="password" class="block mb-2 text-sm text-gray-600">Password</label>
                        <input type="password" id="password" name="password" placeholder="Enter your password"
                            class="text-black w-full px-3 py-2 placeholder-gray-300 border border-gray-500 rounded-md focus:outline-none focus:ring focus:ring-blue-100 focus:border-blue-300"
                            required>
                    </div>
                    <button type="submit"
                        class="w-full py-2 px-4 border border-transparent rounded-md text-white bg-[#000] hover:bg-[#000] focus:bg-[#000df] active:bg-[#000] transition duration-150 ease-in-out">Login</button>
        </form>
        <a class="mt-3 text-sm hover:text-blue-500 " style="text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);" href="/register">New User
            ? Register to your
            account
        </a>
    </div>
    <div class="login-page-right login-bg-img" style="position: relative;">
        <video src="/images/background_video_2023.webm" muted autoplay loop alt="login" class=" w-full h-full object-cover">
        <h1 class="text-white font-bold "
            style="position: absolute; top: 40%;left: 5%;width: 60%;font-size: 25px;text-shadow: 1px 3px 4px rgba(0, 0, 0, 0.5);">
            WELCOME TO ALL SEASONS PRE-SCHOOL</h1>
    </div>
</div>
<script src="/javascripts/sidebar.js"></script>